---
import Layout from '../layouts/Layout.astro';
import { fetchOne } from '../lib/sanity';

const page = await fetchOne('contactPage');
---

<Layout title="Contact | pensionable.ai">
  <section class="hero-section bg-gradient-brand-soft">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{page.heroTitle}</h1>
        <p class="text-xl text-grey">{page.heroSubtitle}</p>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="card">
          <iframe
            src={page.formEmbedUrl}
            style="width: 100%; height: 800px; border: none; overflow: hidden;"
            title="Contact Form"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-gradient-brand-soft">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="card text-center">
            <div class="text-purple text-4xl mb-4">•</div>
            <h3 class="text-xl font-bold mb-2">Email</h3>
            <p class="text-grey">{page.email}</p>
          </div>
          <div class="card text-center">
            <div class="text-purple text-4xl mb-4">•</div>
            <h3 class="text-xl font-bold mb-2">Phone</h3>
            <p class="text-grey">{page.phone}</p>
          </div>
          <div class="card text-center">
            <div class="text-purple text-4xl mb-4">•</div>
            <h3 class="text-xl font-bold mb-2">Location</h3>
            <p class="text-grey">{page.location}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
