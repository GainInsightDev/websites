---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contact | pensionable.ai">
  <section class="hero-section bg-gradient-brand-soft">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">Get in Touch</h1>
        <p class="text-xl text-grey">Schedule a demo or reach out to learn more about pensionable.ai</p>
      </div>
    </div>
  </section>

  <section class="section">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="card">
          <iframe
            src="https://webforms.pipedrive.com/f/bXq31X5u1xB3xV9MpNAihL7HARreb37266tPUGpuYdx0s8KfeOXBDkp3VgJ4oOnnSr"
            style="width: 100%; height: 800px; border: none; overflow: hidden;"
            title="Contact Form"
          ></iframe>
        </div>
      </div>
    </div>
  </section>

  <section class="section bg-gradient-brand-soft">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          <div class="card text-center">
            <div class="text-purple text-4xl mb-4">•</div>
            <h3 class="text-xl font-bold mb-2">Email</h3>
            <p class="text-grey">info@pensionable.ai</p>
          </div>
          <div class="card text-center">
            <div class="text-purple text-4xl mb-4">•</div>
            <h3 class="text-xl font-bold mb-2">Phone</h3>
            <p class="text-grey">+44 (0) 770 631 9468</p>
          </div>
          <div class="card text-center">
            <div class="text-purple text-4xl mb-4">•</div>
            <h3 class="text-xl font-bold mb-2">Location</h3>
            <p class="text-grey">Liverpool, United Kingdom</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
