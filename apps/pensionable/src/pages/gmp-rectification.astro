---
import Layout from '../layouts/Layout.astro';
import { fetchBySlug } from '../lib/sanity';

const uc = await fetchBySlug('useCase', 'gmp-rectification');
---

<Layout title={`${uc?.title || 'GMP Rectification'} | pensionable.ai`} description="AI-driven GMP rectification solutions. Automated calculation verification, data reconciliation, and compliance reporting.">
  <!-- Hero Section -->
  <section class="hero-section bg-gradient-brand-soft">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6">{uc?.title}</h1>
        <p class="text-xl text-grey mb-8">{uc?.subtitle}</p>
        <a href="/contact" class="btn btn-primary">Start a conversation today!</a>
      </div>
    </div>
  </section>

  <!-- Problem & Approach Section -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-12">
        <div>
          <h2 class="text-3xl font-bold mb-6">The Challenge</h2>
          <div class="space-y-4">
            {uc?.challenge?.split('\n\n').map((p: string) => (
              <p class="text-grey">{p}</p>
            ))}
          </div>
        </div>
        <div>
          <h2 class="text-3xl font-bold mb-6">Our Approach</h2>
          <div class="space-y-4">
            {uc?.approach?.split('\n\n').map((p: string) => (
              <p class="text-grey">{p}</p>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Architecture Section -->
  <section class="section bg-white">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Solution Architecture</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {uc?.solutionArchitecture?.map((section: any) => (
          <div class="bg-gradient-light rounded-lg p-8">
            <h3 class="text-xl font-bold mb-4">{section.title}</h3>
            <ul class="space-y-4">
              {section.items?.map((item: any) => (
                <li class="flex items-start">
                  <span class="text-purple mr-3">&bull;</span>
                  <div>
                    <p class="font-medium">{item.title}</p>
                    <p class="text-grey">{item.description}</p>
                  </div>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Benefits Section -->
  <section class="section">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Key Benefits</h2>
      <div class="grid md:grid-cols-3 gap-8">
        {uc?.benefits?.map((benefit: any) => (
          <div class="card text-center">
            <div class="bg-purple/10 inline-flex items-center justify-center w-16 h-16 rounded-full mb-6 mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4">{benefit.title}</h3>
            <p class="text-grey">{benefit.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Frequently Asked Questions</h2>
      <div class="max-w-3xl mx-auto space-y-8">
        {uc?.faqs?.map((faq: any) => (
          <div class="card">
            <h3 class="text-xl font-bold mb-4">{faq.question}</h3>
            <p class="text-grey">{faq.answer}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Who Benefits Section -->
  <section class="section bg-gradient-light">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">Who Benefits</h2>
      <div class="grid md:grid-cols-3 gap-8 text-center">
        {uc?.whoBenefits?.map((item: any) => (
          <div class="card">
            <div class="bg-purple/10 inline-flex items-center justify-center w-16 h-16 rounded-full mb-6 mx-auto">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
            </div>
            <h3 class="text-xl font-bold mb-4">{item.title}</h3>
            <p class="text-grey">{item.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-brand text-white">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-6 text-white">{uc?.ctaTitle}</h2>
      <p class="text-xl mb-8 opacity-90">{uc?.ctaDescription}</p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="btn bg-white text-navy hover:bg-white/90">Start a conversation today!</a>
      </div>
    </div>
  </section>
</Layout>
