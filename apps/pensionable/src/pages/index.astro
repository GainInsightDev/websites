---
import Layout from '../layouts/Layout.astro';
import { fetchOne, fetchAll } from '../lib/sanity';

const homePage = await fetchOne('homePage');
const useCases = await fetchAll('useCase');

const useCaseLinks: Record<string, string> = {
  'Defined Benefit PRT': '/defined-benefit-prt',
  'ISP Value Data': '/isp-value-data',
  'GMP Rectification': '/gmp-rectification',
};
---

<Layout>
  <!-- Hero Section -->
  <section class="hero-section bg-gradient-brand text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-6 text-white">
          {homePage.heroTitle}
        </h1>
        <p class="text-xl text-white/90 mb-8">
          {homePage.heroSubtitle}
        </p>
        <a href={homePage.heroCtaLink || '/contact'} class="btn btn-primary">
          {homePage.heroCtaText || 'Start a conversation today!'}
        </a>
      </div>
    </div>
  </section>

  <!-- Problem Statement Section -->
  <section class="section">
    <div class="container">
      <div class="grid md:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl font-bold mb-6">
            {homePage.problemTitle}
          </h2>
          <div class="space-y-4">
            {homePage.problemDescription?.split('\n\n').map((para: string) => (
              <p class="text-grey">{para}</p>
            ))}
          </div>
        </div>
        <div class="bg-white rounded-lg shadow-card p-8">
          <ul class="space-y-4">
            {homePage.problemItems?.map((item: string) => (
              <li class="flex items-start">
                <span class="text-purple mr-3">&bull;</span>
                <p class="text-grey">{item}</p>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- Solution Overview -->
  <section class="section bg-gradient-light">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">
        {homePage.solutionTitle}
      </h2>
      <div class="grid md:grid-cols-3 gap-8">
        {homePage.solutionCards?.map((card: any) => (
          <div class="card">
            <h3 class="text-xl font-bold mb-4">{card.title}</h3>
            <p class="text-grey">
              {card.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Use Cases -->
  <section class="section">
    <div class="container">
      <h2 class="text-3xl font-bold text-center mb-12">
        Featured Use Cases
      </h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {useCases.map((uc: any) => (
          <div class="card">
            <h3 class="text-xl font-bold mb-4">{uc.title}</h3>
            <p class="text-grey mb-4">{uc.subtitle}</p>
            <a href={useCaseLinks[uc.title] || `/use-cases/${uc.slug?.current}`} class="text-teal hover:text-teal/80 font-medium inline-flex items-center">
              Learn More
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-brand text-white">
    <div class="container text-center">
      <h2 class="text-3xl font-bold mb-6 text-white">
        {homePage.ctaTitle}
      </h2>
      <p class="text-xl mb-8 opacity-90">
        {homePage.ctaDescription}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn bg-white text-navy hover:bg-white/90">
          Contact Us
        </a>
      </div>
    </div>
  </section>
</Layout>
