---
interface Props {
  id: string;
  definition: string;
  className?: string;
}

const { id, definition, className = '' } = Astro.props;
---

<div class={`mermaid-container ${className}`} id={`${id}-container`}>
  <div class="mermaid-loading">
    <div class="mermaid-spinner"></div>
  </div>
  <pre class="mermaid" id={id}>{definition}</pre>
</div>

<style>
  .mermaid-container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    background-color: #1A1A2E;
  }
  .mermaid-container pre.mermaid {
    visibility: hidden;
    position: absolute;
    width: 100%;
    height: 100%;
  }
  .mermaid-container pre.mermaid[data-processed="true"],
  .mermaid-container :global(svg) {
    visibility: visible;
    position: relative;
  }
  .mermaid-container :global(svg) {
    width: 100% !important;
    height: 100% !important;
    max-width: 100%;
    max-height: 100%;
    transform: scale(0.8);
    transform-origin: center center;
  }
  .mermaid-container :global(.label text),
  .mermaid-container :global(text) {
    fill: white !important;
    font-family: 'Inter', sans-serif !important;
    font-size: 80% !important;
  }
  .mermaid-loading {
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    z-index: 1;
  }
  .mermaid-container:has(:global(svg)) .mermaid-loading {
    display: none;
  }
  .mermaid-spinner {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(63, 186, 212, 0.2);
    border-top-color: #3FBAD4;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
  }
  @keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>
